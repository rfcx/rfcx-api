FROM ubuntu:18.04

RUN apt update \
    && apt install -y \
        curl \
        gnupg \
        gcc \
        g++ \
        make \
        sox \
        pngcrush \
        imagemagick \
        python-minimal \
        software-properties-common \
        libsox-fmt-all

RUN  add-apt-repository ppa:jonathonf/ffmpeg-4 \
    &&  apt update && apt install -y  ffmpeg libsox-fmt-all \
    && rm -rf /var/lib/apt/lists/*

RUN curl -sLO https://deb.nodesource.com/node_6.x/pool/main/n/nodejs/nodejs_6.14.1-1nodesource1_amd64.deb \
    &&  dpkg -i nodejs_6.14.1-1nodesource1_amd64.deb \
    &&  rm -rf nodejs_6.14.1-1nodesource1_amd64.deb
