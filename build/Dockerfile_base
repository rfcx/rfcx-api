FROM ubuntu:18.04

RUN apt update \
    && apt install -y \
        curl \
        gnupg \
        gcc \
        g++ \
        make \
        sox \
        pngcrush \
        imagemagick \
        python-minimal \
        software-properties-common \
        libsox-fmt-all

RUN  add-apt-repository ppa:jonathonf/ffmpeg-4 && \
     apt update && \
     apt install -y  ffmpeg libsox-fmt-all && \
     curl -sL https://deb.nodesource.com/setup_12.x | bash - && \
     apt update && \
     apt install -y nodejs && \
     rm -rf /var/lib/apt/lists/*
