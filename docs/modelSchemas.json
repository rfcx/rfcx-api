{
  "AnnotationLite": {
    "allOf": [
      {
        "$ref": "#/components/requestBodies/Annotation"
      },
      {
        "properties": {
          "id": {
            "type": "uuid",
            "example": "c0686679-6c06-4f5d-84b5-2b4934aad33e"
          },
          "stream_id": {
            "type": "string",
            "example": "01a2ucztj8ax"
          },
          "classification": {
            "$ref": "#/components/schemas/ClassificationLite"
          }
        },
        "required": [
          "id",
          "streamId"
        ]
      }
    ]
  },
  "Annotation": {
    "allOf": [
      {
        "$ref": "#/components/schemas/AnnotationLite"
      },
      {
        "properties": {
          "created_at": {
            "type": "date"
          },
          "created_by": {
            "type": "integer",
            "description": "The user who created the annotation"
          },
          "updated_at": {
            "type": "date"
          },
          "updated_by": {
            "type": "integer",
            "description": "The user who last updated the annotation"
          }
        }
      }
    ]
  },
  "ClassificationLite": {
    "type": "object",
    "properties": {
      "value": {
        "type": "string",
        "description": "Unique short name",
        "example": "falciformis"
      },
      "title": {
        "type": "string",
        "description": "Description or latin name",
        "example": "Carcharhinus falciformis"
      },
      "image": {
        "type": "string"
      },
      "type": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "example": "species"
          }
        }
      }
    },
    "required": [
      "value",
      "title"
    ]
  },
  "Classification": {
    "allOf": [
      {
        "$ref": "#/components/schemas/ClassificationLite"
      },
      {
        "properties": {
          "description": {
            "type": "string",
            "example": "Found in temperate and tropical seas all around the world, they begin their lives spotless and steadily gain spots as they get older."
          },
          "frequency_min": {
            "type": "integer",
            "example": 4500
          },
          "frequency_max": {
            "type": "integer",
            "example": 9800
          },
          "alternative_names": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "language_id": {
                  "type": "string"
                }
              }
            },
            "example": [
              {
                "name": "Bridled Dolphin",
                "language_id": "en_US"
              },
              {
                "name": "Pantropical Spotted Dolphin",
                "language_id": "en_US"
              }
            ]
          },
          "reference_annotations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "uuid"
                },
                "stream_id": {
                  "type": "string"
                },
                "start": {
                  "type": "date"
                },
                "end": {
                  "type": "date"
                },
                "frequency_min": {
                  "type": "integer"
                },
                "frequency_max": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    ]
  },
  "Cluster": {
    "type": "object",
    "properties": {
      "time_bucket": {
        "type": "date",
        "description": "Timestamp of the start of the time bucket",
        "example": "2020-06-02T00:00:00.000Z"
      },
      "aggregated_value": {
        "type": "float",
        "description": "The result of the aggregation over the cluster (sum, count, avg, etc)",
        "example": 72
      },
      "first_start": {
        "type": "date",
        "description": "Timestamp of the first annotation in the cluster",
        "example": "2020-05-12T07:30:21.500Z"
      },
      "last_start": {
        "type": "date",
        "description": "Timestamp of the last annotation in the cluster",
        "example": "2020-05-12T12:48:21.500Z"
      },
      "classification": {
        "$ref": "#/components/schemas/ClassificationLite"
      }
    }
  },
  "AnnotationCluster": {
    "$ref": "#/components/schemas/Cluster"
  },
  "DetectionCluster": {
    "$ref": "#/components/schemas/Cluster"
  },
  "StreamLite": {
    "properties": {
      "id": {
        "type": "string",
        "example": "xu82jDgX49"
      },
      "name": {
        "type": "string",
        "example": "My Stream 1"
      },
      "start": {
        "type": "date",
        "example": "2020-05-12T07:30:21.500Z"
      },
      "end": {
        "type": "date",
        "example": "2020-05-12T07:30:22.500Z"
      },
      "is_private": {
        "type": "boolean",
        "example": true
      }
    },
    "required": [
      "name"
    ]
  },
  "Stream": {
    "allOf": [
      {
        "$ref": "#/components/schemas/StreamLite"
      },
      {
        "properties": {
          "description": {
            "type": "string",
            "example": "Stream 1 description"
          },
          "created_at": {
            "type": "date",
            "example": "2020-05-13T07:30:22.500Z"
          },
          "created_by": {
            "$ref": "#/components/schemas/UserLite"
          },
          "updated_at": {
            "type": "date",
            "example": "2020-05-13T07:30:22.500Z"
          },
          "max_sample_rate": {
            "type": "integer",
            "example": 32000
          },
          "latitude": {
            "type": "float",
            "example": 90.123
          },
          "longitude": {
            "type": "float",
            "example": 125.912
          }
        },
        "required": [
          "name"
        ]
      }
    ]
  },
  "UserLite": {
    "properties": {
      "firstname": {
        "type": "string",
        "example": "John"
      },
      "lastname": {
        "type": "string",
        "example": "Doe"
      },
      "picture": {
        "type": "string",
        "example": "https://upload.wikimedia.org/wikipedia/commons/1/11/Contact-new.svg"
      }
    }
  },
  "MasterSegment": {
    "properties": {
      "id": {
        "type": "uuid",
        "example": "c0686679-6c06-4f5d-84b5-2b4934aad33e"
      },
      "stream": {
        "$ref": "#/components/schemas/StreamLite"
      },
      "filename": {
        "type": "string",
        "example": "1feb70b91439-2020-06-24T17-15-26.opus"
      },
      "format": {
        "type": "string",
        "example": "opus"
      },
      "duration": {
        "type": "integer",
        "example": 90126
      },
      "sample_count": {
        "type": "integer",
        "example": 4326072
      },
      "sample_rate": {
        "type": "integer",
        "example": 12000
      },
      "channel_layout": {
        "type": "string",
        "example": "mono"
      },
      "channels_count": {
        "type": "integer",
        "example": 1
      },
      "bit_rate": {
        "type": "integer",
        "example": 16384
      },
      "codec": {
        "type": "string",
        "example": "opus"
      },
      "sha1_checksum": {
        "type": "string",
        "example": "7ea9896798385afb5939cdf8349ce389f5e3b128"
      },
      "meta": {
        "type": "object",
        "example": {
          "date": "2020-06-24T10:11:38-07",
          "title": "SBW1607_20200624_171138.wav",
          "album": "SBx-ETH R4"
        }
      }
    }
  }
}
