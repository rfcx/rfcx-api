{
  "AnnotationLite": {
    "allOf": [
      {
        "$ref": "#/components/requestBodies/Annotation"
      },
      {
        "properties": {
          "id": {
            "type": "uuid",
            "example": "c0686679-6c06-4f5d-84b5-2b4934aad33e"
          },
          "stream_id": {
            "type": "string",
            "example": "01a2ucztj8ax"
          },
          "classification": {
            "$ref": "#/components/schemas/ClassificationLite"
          }
        },
        "required": [
          "id",
          "streamId"
        ]
      }
    ]
  },
  "Annotation": {
    "allOf": [
      {
        "$ref": "#/components/schemas/AnnotationLite"
      },
      {
        "properties": {
          "created_at": {
            "type": "date"
          },
          "created_by": {
            "type": "integer",
            "description": "The user who created the annotation"
          },
          "updated_at": {
            "type": "date"
          },
          "updated_by": {
            "type": "integer",
            "description": "The user who last updated the annotation"
          }
        }
      }
    ]
  },
  "ClassificationLite": {
    "type": "object",
    "properties": {
      "value": {
        "type": "string",
        "description": "Unique short name",
        "example": "falciformis"
      },
      "title": {
        "type": "string",
        "description": "Description or latin name",
        "example": "Carcharhinus falciformis"
      },
      "image": {
        "type": "string"
      },
      "type": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "example": "species"
          }
        }
      }
    },
    "required": [
      "value",
      "title"
    ]
  },
  "Classification": {
    "allOf": [
      {
        "$ref": "#/components/schemas/ClassificationLite"
      },
      {
        "properties": {
          "description": {
            "type": "string",
            "example": "Found in temperate and tropical seas all around the world, they begin their lives spotless and steadily gain spots as they get older."
          },
          "alternative_names": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "language_id": {
                  "type": "string"
                }
              }
            },
            "example": [
              {
                "name": "Bridled Dolphin",
                "language_id": "en_US"
              },
              {
                "name": "Pantropical Spotted Dolphin",
                "language_id": "en_US"
              }
            ]
          },
          "reference_annotations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "uuid"
                },
                "stream_id": {
                  "type": "string"
                },
                "start": {
                  "type": "date"
                },
                "end": {
                  "type": "date"
                },
                "frequency_min": {
                  "type": "integer"
                },
                "frequency_max": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    ]
  },
  "Cluster": {
    "type": "object",
    "properties": {
      "time_bucket": {
        "type": "date",
        "description": "Timestamp of the start of the time bucket",
        "example": "2020-06-02T00:00:00.000Z"
      },
      "aggregated_value": {
        "type": "float",
        "description": "The result of the aggregation over the cluster (sum, count, avg, etc)",
        "example": 72
      },
      "first_start": {
        "type": "date",
        "description": "Timestamp of the first annotation in the cluster",
        "example": "2020-05-12T07:30:21.500Z"
      },
      "last_start": {
        "type": "date",
        "description": "Timestamp of the last annotation in the cluster",
        "example": "2020-05-12T12:48:21.500Z"
      },
      "classification": {
        "$ref": "#/components/schemas/ClassificationLite"
      }
    }
  },
  "AnnotationCluster": {
    "$ref": "#/components/schemas/Cluster"
  },
  "DetectionCluster": {
    "$ref": "#/components/schemas/Cluster"
  },
  "StreamLite": {
    "allOf": [
      {
        "properties": {
          "id": {
            "type": "string",
            "example": "xu82jDgX49"
          },
          "name": {
            "type": "string",
            "example": "My Stream 1"
          },
          "start": {
            "type": "date",
            "example": "2020-05-12T07:30:21.500Z"
          },
          "end": {
            "type": "date",
            "example": "2020-05-12T07:30:22.500Z"
          },
          "is_private": {
            "type": "boolean",
            "example": true
          }
        },
        "required": [
          "name"
        ]
      }
    ]
  },
  "Stream": {
    "allOf": [
      {
        "properties": {
          "id": {
            "type": "string",
            "example": "xu82jDgX49"
          },
          "name": {
            "type": "string",
            "example": "My Stream 1"
          },
          "description": {
            "type": "string",
            "example": "Stream 1 description"
          },
          "start": {
            "type": "date",
            "example": "2020-05-12T07:30:21.500Z"
          },
          "end": {
            "type": "date",
            "example": "2020-05-12T07:30:22.500Z"
          },
          "is_private": {
            "type": "boolean",
            "example": true
          },
          "created_at": {
            "type": "date",
            "example": "2020-05-13T07:30:22.500Z"
          },
          "created_by": {
            "$ref": "#/components/schemas/UserLite"
          },
          "updated_at": {
            "type": "date",
            "example": "2020-05-13T07:30:22.500Z"
          },
          "max_sample_rate": {
            "type": "integer",
            "example": 32000
          },
          "location": {
            "$ref": "#/components/schemas/LocationLite"
          }
        },
        "required": [
          "name"
        ]
      }
    ]
  },
  "UserLite": {
    "allOf": [
      {
        "properties": {
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "lastname": {
            "type": "string",
            "example": "Doe"
          },
          "picture": {
            "type": "string",
            "example": "https://upload.wikimedia.org/wikipedia/commons/1/11/Contact-new.svg"
          }
        }
      }
    ]
  },
  "LocationLite": {
    "allOf": [
      {
        "properties": {
          "id": {
            "type": "uuid",
            "example": "a4fa4917-32d5-4e23-891d-56e068b476c3"
          },
          "name": {
            "type": "string",
            "example": "Location 1"
          },
          "latitude": {
            "type": "float",
            "example": 91.213
          },
          "longitude": {
            "type": "float",
            "example": 124.6123
          }
        }
      }
    ]
  }
}
